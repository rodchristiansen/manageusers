# Environment configuration for ManageUsers Swift binary
# Copy this file to .env and configure with your specific values

# Code Signing Configuration
# Use the SHA-1 hash for specific certificate identification to avoid ambiguity
# Run: security find-identity -v -p codesigning
# Then use the hash (e.g., ABC123DEF456...) or full certificate name
CODE_SIGN_IDENTITY="YOUR_CERTIFICATE_HASH_HERE"
# Alternative: CODE_SIGN_IDENTITY="Developer ID Application: Your Organization Name (TEAMID)"
KEYCHAIN_PATH="${HOME}/Library/Keychains/signing.keychain"

# Optional: Keychain password (use with caution)
# KEYCHAIN_PASSWORD=""

# Optional: Notarization settings
# NOTARIZE_USERNAME="your-apple-id@example.com"
# NOTARIZE_PASSWORD="@keychain:AC_PASSWORD"
# NOTARIZE_TEAM_ID="YOUR_TEAM_ID"

# Optional: Build configuration
# BUILD_CONFIGURATION="release"
# TARGET_ARCHITECTURES="x86_64,arm64"

# Optional: Installation paths
# INSTALL_PATH="/usr/local/bin"
# PKG_OUTPUT_PATH="./release"